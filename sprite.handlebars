{{#with spritesheet}}
.icon
{
   background-image: url("{{{image}}}");
   background-size: {{#half}}{{px.width}}{{/half}} {{#half}}{{px.height}}{{/half}};
   display: inline-block;
   vertical-align: middle;
}
{{/with}}

{{#sprites}}
.icon--{{name}}
{
   background-position: {{#half}}{{px.offset_x}}{{/half}} {{#half}}{{px.offset_y}}{{/half}};
   height: {{#half}}{{px.height}}{{/half}};
   width: {{#half}}{{px.width}}{{/half}};
}
{{/sprites}}